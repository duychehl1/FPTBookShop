<h2>Search Book</h2>


			
<div class="container">
    <br/>
	<div class="row justify-content-center">
                        <div class="col-12 col-md-10 col-lg-8">
                            <form asp-action="Search" asp-controller="Customer" class="card card-sm">
                                <div class="card-body row no-gutters align-items-center">                                  
                                    <!--end of col-->
                                    <div class="col">
                                        <input name="Search" asp-action= "Search" class="form-control form-control-lg form-control-borderless" type="search" placeholder="Search topics or keywords">
                                    </div>
                                    <!--end of col-->
                                    <div class="col-auto">
                                        <button class="btn btn-lg btn-success" type="submit">Search</button>
                                    </div>
                                    <!--end of col-->
                                </div>
                            </form>
                        </div>
                        <!--end of col-->
                    </div>
	</div>


			<div class="row">
				<div class="col">
					<div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>

						<!-- Display result-->
						@foreach (var item in Model) {
						<div class="product-item men">
							<div class="product discount product_filter">
								<div class="product_image">
									<img src="~/images/@item.PictureName" alt="" height="120" width="80">
								</div>
								<div class="favorite favorite_left"></div>
								<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$0</span></div>
								<div class="product_info">
									<h6 class="product_name"><a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a></h6>
									<div class="product_price">@Html.DisplayFor(modelItem => item.Price)</div>
								</div>
							</div>
							<div class="red_button add_to_cart_button"><a asp-controller="Product" asp-action="addCart" asp-route-id="@item.Id" class="addProduct"> Add to cart</a></div>
						</div>
						}
						
					</div>
				</div>
			</div>
		</div>
	</div>

	

