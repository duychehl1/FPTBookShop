@model BookShop.Models.CustomerViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Edit customer</h3>
    </div>
    <div class="card-body">
        <form asp-action="Profile" enctype="multipart/form-data">
            <input type="hidden" asp-for="CusId" readonly/>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" required/>                       
                    </div>
                </div>
                 <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" readonly/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" required/>                      
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <Select asp-for="Gender" class="control-label">
                            <option value="Male">Male</option>
                            <option value="Male">Female</option>
                            <option value="Unknown">Unknown</option>
                        </Select>                       
                    </div>
                </div>
               
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" required/>                
                    </div>
                </div>
                 <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CustomerPicture" class="control-label"></label>
                        <input type="file" asp-for="UploadPicture" class="form-control" />                                            
                        <img src="~/uploads/@Model.CustomerPicture" title="@Model.CustomerPicture" class="img-thumbnail" height="100px" width="100px" />
                    </div>
                </div>
                <input type="hidden" asp-for="Account" class="form-control" />
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> Update</button>
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Back to List</a>
            </div>
        </form>
        <h1>@ViewBag.Error</h1>
    </div>
</div>


