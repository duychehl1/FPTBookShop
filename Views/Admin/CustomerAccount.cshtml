
@{
    ViewData["Title"] = "Admin";	
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Account Table</h1>
<a asp-action="Add" class="btn btn-success">Add</a>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
      <th scope="col">Role</th>
      <th scope="col">Function</th>
    </tr>
  </thead>
  <tbody>
        @foreach (var item in Model)
        {<tr>
            <td>@item.Email</td>
              <td>@item.Password</td>
              <td>@item.Role</td>
              <td>
                 <a href="/admin/edit?email=@item.Email" class="btn btn-warning" >Edit</a>
                 <a href="/admin/delete?email=@item.Email"  class="btn btn-danger" 
                 onclick="return confirm('Do you want to delete this account?');"   
                 >Remove</a>
              </td>
        </tr>
        }
  </tbody>
</table>