@model BookShop.Models.Account;
@{
    ViewData["Title"] = "Edit Acount";	
     Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="container col-md-6 mt-3 text-center">
    <h2 class="text text-success mb-3">Edit new account</h2>
     <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" class="form-control" readonly/>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label"></label>
                <input asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Role" class="control-label"></label>
                <select asp-for="@Model.Role" class="form-control">
                                <option value="CUSTOMER">CUSTOMER</option>
                                <option value="OWNER">OWNER</option>
                </select>            
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
</div> 